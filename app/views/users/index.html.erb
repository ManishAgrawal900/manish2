<h1>all user</h1>
<%= link_to 'New user', new_user_path %>

<table border=1 ,color=black >
  <tr>
    <th>name</th>
    <th>email</th>
    <th>password</th>
    <th>conform_paswword</th>


    <th colspan="3"></th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.password %></td>
      <td><%= user.conform_paswword %></td>
      
      <td><%= link_to 'Destroy', user_path(user),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
